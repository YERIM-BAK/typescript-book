{
  "compilerOptions": {
    "jsx": "react",
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "dist",
    "strict": true,
    "moduleDetection": "force",
    "skipLibCheck": false,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src"],
  "extensions": [
    ".js",
    ".jsx",
    ".ts",
    ".tsx"
  ]
}